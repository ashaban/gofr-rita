[Unit]
Description=facility-recon hearth
Documentation=https://example.com
After=network.target

[Service]
Environment=authentication__type=disabled
Environment=logger__level="error"
Type=simple
User={{ user }}
WorkingDirectory=/home/{{ user }}/hearth
ExecStart={{ executable }} run dev:start
Restart=on-failure

[Install]
WantedBy=multi-user.target